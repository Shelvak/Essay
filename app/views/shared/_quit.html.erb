<div class="modal fade hide" id="logout">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3><%= t('view.shifts.close_session.title') %></h3>
  </div>
  <div class="modal-body">
    <p><%= t('view.shifts.close_session.body.html') %></p>
  </div>
  <div class="modal-footer">
    <div class="row-fluid">
      <div class="span4">
        <div class="pull-left">
          <%= link_to t('view.shifts.exit'), destroy_user_session_path,
            class: 'btn', method: :delete %>
        </div>
      </div>
      <div class="span4">
        <div class="pull-right">
          <%= link_to t('view.shifts.close_session'), quit_session_path,
            class: 'btn btn-primary', method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>
